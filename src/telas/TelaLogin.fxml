<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controles.TelaLoginController">
   <children>
      <Label text="Assistente de Vacinação">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="32.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="cpfField" maxWidth="200.0" promptText="CPF" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets bottom="16.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="senhaField" maxWidth="200.0" promptText="Senha">
         <VBox.margin>
            <Insets bottom="32.0" />
         </VBox.margin>
      </PasswordField>
      <Button alignment="CENTER" maxWidth="200.0" mnemonicParsing="false" onAction="#onEntrar" text="Entrar" />
      <Button alignment="CENTER" maxWidth="200.0" mnemonicParsing="false" onAction="#onCadastrar" text="Cadastrar">
         <VBox.margin>
            <Insets top="64.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
